<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.apitest.UserActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <EditText
        android:id="@+id/et_id"
        android:layout_width="385dp"
        android:layout_height="53dp"
        android:ems="10"
        android:hint="Id"
        android:inputType="text"
        tools:layout_editor_absoluteY="289dp"
        tools:layout_editor_absoluteX="1dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/et_description"
        android:layout_width="385dp"
        android:layout_height="53dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="text"
        tools:layout_editor_absoluteY="228dp"
        tools:layout_editor_absoluteX="1dp"
        android:layout_below="@+id/et_avatar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/et_avatar"
        android:layout_width="385dp"
        android:layout_height="53dp"
        android:ems="10"
        android:hint="Avatar"
        android:inputType="text"
        tools:layout_editor_absoluteY="167dp"
        tools:layout_editor_absoluteX="1dp"
        android:layout_below="@+id/et_password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="385dp"
        android:layout_height="53dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="text"
        tools:layout_editor_absoluteY="114dp"
        tools:layout_editor_absoluteX="1dp"
        android:layout_below="@+id/et_displayName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <EditText
        android:id="@+id/et_displayName"
        android:layout_width="385dp"
        android:layout_height="53dp"
        android:ems="10"
        android:hint="DisplayName"
        android:inputType="text"
        tools:layout_editor_absoluteY="61dp"
        tools:layout_editor_absoluteX="1dp"
        android:layout_below="@+id/et_email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="385dp"
        android:layout_height="53dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="text"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="2dp"
        android:layout_below="@+id/et_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/b_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="461dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/b_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="461dp"
        android:layout_above="@+id/b_login"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/b_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        tools:layout_editor_absoluteX="265dp"
        tools:layout_editor_absoluteY="461dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/b_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Get"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="461dp" />

    <Button
        android:id="@+id/b_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/b_update"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Create"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="461dp" />
</RelativeLayout>
